<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arielo.momaentregable.view.fragments.DetalleFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <android.support.design.widget.CoordinatorLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/imageViewPintura"
               android:layout_width="match_parent"
               android:layout_height="300dp" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="35dp"
               android:background="#8e000000"
               app:layout_anchor="@+id/imageViewPintura"
               app:layout_anchorGravity="bottom|center"
               android:text="Aca va a a ir el nombre de la Obra"
               android:textSize="25dp"
               android:textAlignment="center"
               android:id="@+id/textViewNombreDeLaPintura"/>
       </android.support.design.widget.CoordinatorLayout>

   </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Artista :"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewNombreDelArtista"
            android:layout_width="300dp"
            android:layout_height="79dp"
            android:layout_marginLeft="10dp"
            android:text="Aca va a ir el nombre del artista"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Influencias :"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="272dp"
            android:layout_height="192dp"
            android:text="Aca va a ir las influencias del Artista"
            android:textSize="20dp"
            android:id="@+id/textViewInfluencias"/>


    </LinearLayout>



</LinearLayout>

</ScrollView>
