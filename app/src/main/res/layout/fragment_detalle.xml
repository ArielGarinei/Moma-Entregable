<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arielo.momaentregable.view.fragments.DetalleFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <android.support.design.widget.CoordinatorLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/imageViewPintura"
               android:layout_width="match_parent"
               android:layout_height="300dp" />
           <ProgressBar
               android:id="@+id/progressBar_ActivityLogin"
               style="?android:attr/progressBarStyleLarge"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:indeterminate="true"
               android:visibility="gone"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="35dp"
               android:background="#8e000000"
               app:layout_anchor="@+id/imageViewPintura"
               app:layout_anchorGravity="bottom|center"
               android:text="Aca va a a ir el nombreUsuarioEnviado de la Obra"
               android:textSize="25dp"
               android:textAlignment="center"
               android:id="@+id/textViewNombreDeLaPintura"/>
       </android.support.design.widget.CoordinatorLayout>

   </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Artista :"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewNombreDelArtista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Aca va a ir el nombreUsuarioEnviado del artista"
            android:textSize="20dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Nacionalidad :"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textViewNacionalidadDelArtista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Aca va a ir la nacion del artista"
                android:textSize="20dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Influencias :"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aca va a ir las influencias del Artista"
            android:textSize="20dp"
            android:id="@+id/textViewInfluencias"/>


    </LinearLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:id="@+id/imageViewFoto"
            android:src="@mipmap/ic_launcher"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/botonUpload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_backup_black_24dp"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/botonCamara"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_camera_alt_black_24dp"/>

        </RelativeLayout>

</LinearLayout>

</ScrollView>
