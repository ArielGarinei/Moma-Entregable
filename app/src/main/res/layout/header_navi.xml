<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewBordeFotoUsuario_NavigationViewHeader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#999999"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/imageViewPhotoUser_NavigationViewHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_black_24dp" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/textViewNameUser_NavigationViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewBordeFotoUsuario_NavigationViewHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Invitado"
        android:textColor="#999999"
        android:textSize="20dp" />

</RelativeLayout>